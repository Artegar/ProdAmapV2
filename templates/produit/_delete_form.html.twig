<form method="post" action="{{ path('produit_delete', {'produitId': produit.produitId}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.produitId) }}">
    <button class="btn">Supprimer</button>
</form>