{% include 'base.html.twig' %}


{% block body %}
    <h1>Contrat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Création</th>
                <td>{{ contrat.contDateRecept ? contrat.contDateRecept|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Prix du panier</th>
                <td>{{ contrat.contMontant }}</td>
            </tr>
            <tr>
                <th>Début</th>
                <td>{{ contrat.contDateDebut ? contrat.contDateDebut|date('d-m-Y') : '' }}</td>
