<form method="post" action="{{ path('producteur_delete', {'prodId': producteur.prodId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ producteur.prodId) }}">
    <button class="btn">Delete</button>
</form>