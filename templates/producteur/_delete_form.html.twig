<form method="post" action="{{ path('producteur_delete', {'prodId': producteur.prodId}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce producteur?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ producteur.prodId) }}">
    <button class="btn">Supprimer</button>
</form>