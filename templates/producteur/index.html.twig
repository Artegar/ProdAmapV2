{% include 'base.html.twig' %}

{% block body %}
    <h1>Producteur(s)</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ProdSiren</th>
                <th>ProdNomExploit</th>
                {% if app.user %}
                    <th>actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for producteur in producteurs %}
            <tr>
                <td>{{ producteur.prodSiren }}</td>
                <td>{{ producteur.prodNomExploit }}</td>

                {% if app.user %}
                    <td>
                        <a href="{{ path('producteur_show', {'prodId': producteur.prodId}) }}">voir</a>
                        |
                        <a href="{{ path('producteur_edit', {'prodId': producteur.prodId}) }}">modifier</a>
                    </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="6">pas de résultats</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if app.user %}
        <a href="{{ path('producteur_new') }}">Créer un producteur</a>
    {% endif %}
{% endblock %}